<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popupwindow_read_mode_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_normal_margin_default"
            android:layout_marginHorizontal="@dimen/view_normal_margin_default"
            android:padding="@dimen/view_normal_margin_default"
            android:src="@mipmap/close" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/view_normal_margin_default"
            android:padding="@dimen/view_normal_margin_default"
            android:singleLine="true"
            android:text="@string/popupwindow_read_mode_read_title"
            android:textColor="?attr/mainColorText"
            android:textSize="@dimen/textView_normal_textSize_super_broad"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/view_normal_margin_default"
            android:paddingVertical="@dimen/view_normal_margin_narrow"
            android:divider="@null" />

    </LinearLayout>


</RelativeLayout>